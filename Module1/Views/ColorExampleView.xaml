<UserControl x:Class="Module1.Views.ColorExampleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Module1.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBox Text="主题色1" Foreground="White" Height="20" Background="{DynamicResource 主题色1}"/>
            <TextBox Text="主题色2" Foreground="White" Height="20" Background="{DynamicResource 主题色2}"/>
            <TextBox Text="主题色3" Foreground="White" Height="20" Background="{DynamicResource 主题色3}"/>
            <TextBox Text="主题色4" Foreground="White" Height="20" Background="{DynamicResource 主题色4}"/>
            <TextBox Text="主题色5" Foreground="White" Height="20" Background="{DynamicResource 主题色5}"/>
        </StackPanel>
    </Grid>
</UserControl>
